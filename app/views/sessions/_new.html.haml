= form_tag session_path do
  = label_tag :login, User.human_attribute_name(:login)
  = text_field_tag :login, @login

  = label_tag :password, User.human_attribute_name(:password)
  = password_field_tag :password, nil

  = label_tag :remember_me, User.human_attribute_name(:remember_me)
  = check_box_tag 'remember_me', '1', @remember_me, :class => 'checkbox'

  .actions
    = submit_tag t(:log_in, :scope => [:sessions, :controls])

