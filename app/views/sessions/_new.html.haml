%h2 Log In

= form_tag session_path do
  = label_tag 'login'
  = text_field_tag 'login', @login

  = label_tag 'password'
  = password_field_tag 'password', nil

  = label_tag 'remember_me', 'Remember me'
  = check_box_tag 'remember_me', '1', @remember_me, :class => 'checkbox'

  .actions
    = submit_tag 'Log in'

