.actions
  = link_to t(:edit), [:edit, @user] if @user.editable_by? current_user
%h2= t('.title', :name => @user.name)
.split
  .left
    - if @user.radio?
      .block
        %h3= t 'radio'
        = render @user.radio
  .right
    - if @user == current_user
      .block
        %h3= t '.my_invitations'
        = render :partial => 'invitations/invitations', :locals => {:invitations => @user.invitations}
      .block
        %h3= t '.api_tokens'
        = render :partial => 'tokens/tokens', :locals => {:tokens => @user.tokens}

