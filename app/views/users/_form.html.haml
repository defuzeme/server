- @user.password = @user.password_confirmation = nil

= form_for @user do |f|
  .split
    .left
      = auto_text_field f, :login
    .right
      = auto_text_field f, :email

  .split
    .left
      = auto_text_field f, :first_name

    .right
      = auto_text_field f, :last_name

  .split
    .left
      = auto_password_field f, :password

    .right
      = auto_password_field f, :password_confirmation

  .split
    .left
      - if @user.new_record?
        = auto_text_field f, :invitation_code
  .actions
    = f.submit

