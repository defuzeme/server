= form_for @radio do |f|
  .split
    .left
      = auto_text_field f, :name
    .right
      = auto_text_field f, :website

  .split
    .left
      = auto_text_area f, :description, :rows => 5
    .right
      = auto_text_field f, :frequency
      = auto_select f, :band

  .actions
    = f.submit

