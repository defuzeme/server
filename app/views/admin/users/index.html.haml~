%h2 Users

%table
  %thead
    %tr
      %th Login
      %th Name
      %th Email
      %th Join at
      %th Activated at
      %th
  %tbody
    - for user in @users
      %tr{:class => cycle('odd', 'even')}
        %td
          - if user.admin?
            = image_tag 'icons/admin.png', :alt => '[admin]', :title => 'Admin'
          - else
            = image_tag 'icons/user.png', :alt => '[basic user]', :title => 'Basic user'
          = link_to user.login, [:admin, user        ]
        %td= user.name
        %td= user.email
        %td= l(user.created_at, :format => :long)
        %td
          - if user.activated_at
            = l(user.activated_at, :format => :long)
          - else
            never
        %td
          = link_to 'edit', edit_admin_user_path(user)
